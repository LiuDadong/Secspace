doctype html
html(xmlns="http://www.w3.org/1999/xhtml")
    head
        meta(charset="utf-8" name="viewport" content="width=device-width, initial-scale=1.0")
        title 登录页
        link(rel="shortcut icon" href="/imgs/16.ico" type="image/x-icon")
        link(rel="stylesheet" type="text/css" href="/assets/css/font-awesome.min.css")
        link(rel="stylesheet" type="text/css" href="/assets/css/bootstrap.min.css")
        link(rel="stylesheet" type="text/css" href="/assets/css/beyond.min.css")
        link(href="/style/login.css" rel="stylesheet")
    body
        #wrap_forms(style="padding-top:5em;")
            #wrap_login_form
                h3.product-name(style="font-size:40px;")
                form.index-form(role='form' action="/login" type="POST")
                    .mb2
                        input(type="hidden" name="dev_ip" )
                    .form-group
                        span.input-icon.icon-right
                            input.form-control(type='text' name="account" value="" placeholder='请输入账号' autocomplete="off")
                            i.glyphicon.glyphicon-user.circular
                    .form-group
                        span.input-icon.icon-right
                            input.form-control(type='password' name="passwd"  value="" placeholder='请输入密码' autocomplete="off")
                            i.fa.fa-lock.circular
                    .form-group
                        .col-sm-offset-1
                            .checkbox
                                label
                                    input.savepw(type='checkbox')
                                    span.text 记住密码                                         
                    button.btn.btn-primary.btn-block(type='submit') 登 录                                                  
            #wrap_modpw_form(style="display:none;")
                h3(style="font-size:27px;") 请修改初始密码
                form.index-form(role='form' action="/common/pw/selfmod" type="POST")
                    input(type='text', style='display:none;')   
                    .form-group
                        span.input-icon.icon-right
                            input.form-control(type='password' name="old_passwd" value="" placeholder='请输入初始密码' autocomplete="off")
                    .form-group
                        span.input-icon.icon-right
                            input#new_passwd.form-control(type='password' name="new_passwd" value="" placeholder='请输入新密码' autocomplete="off")
                    .form-group
                        span.input-icon.icon-right
                            input.form-control(type='password' same-with='new_passwd'  value="" placeholder='请再次输入新密码' autocomplete="off")
                    .form-group
                        .col-sm-2.col-sm-offset-2
                            a.btn.btn-default.btn-lg(href='/logout') 返回
                        .col-sm-2.col-sm-offset-2
                            input.btn.btn-primary.btn-lg(type='submit' value='保存')
        script(src="/assets/js/jquery-2.0.3.min.js")
        script(src="/assets/js/jquery.form.min.js")
        script(src="/assets/js/jquery.cookie.js")
        script(src="/scripts/jquery.group-fns.js")
        script(src="/assets/js/base64.js")
        //获取网络ip
        script(type="text/javascript" src="//pv.sohu.com/cityjson")  
        script(src="/scripts/login.js")