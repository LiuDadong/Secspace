doctype html
html
    head
        meta(charset="utf-8")
        title 登录页
        link(rel="stylesheet", href="/style/style.css")
    body(style="background:#2F3B4C")
        .login
            .center
                .login_center
                    .login_tab
                        a.active(href="javascript:getAction('man');") 企业版
                        label &nbsp;|&nbsp;
                        a(href="javascript:getAction('per');") 个人版 
                    .sign 登&nbsp;录
                    p.err &nbsp;
                    .cont
                        form(action="/login")
                            .p
                                label 账号
                                input(type="text" name="account")
                            .p(style="background-color:#F7F9FC")                                
                                label 密码
                                input(type="password" name="passwd" id="pass" style="background-color:#F7F9FC")
                                input(type="button" value="查看密码" id="btn" style="background-color:#F7F9FC")
                            button 确&nbsp;认
                            input(type="text", name="flag", value="man", style="display:none;")
                .footer
                    .forget
                        a(href="javascript:updatepwd();") 忘记密码?
            .register(style="display:none;")
                p
                    label(for="register") 没有账号?
                    a(href="javascript:register();") 现在注册    
        script(src="/scripts/jquery.min.js")
        script(src="/scripts/jquery.form.min.js")
        script(src="/scripts/jquery.cookie.js")
        script(src="/scripts/login.js")