doctype html
html
    head
        meta(charset="utf-8")
        //-base()
        title #{ title }
        link(rel="stylesheet", href="/style/style.css")
    body
        script(src="/scripts/jquery.min.js")
        script(src="/scripts/jquery.cookie.js")
        script(src="/scripts/layout.js")   
        .layout          
            .layout-left(id="layout_left")
                .logo
                    img(width="60.9%;" height="28.2%;" src="../imgs/logo.png")
                .online
                    .pic
                    .username #{ admin }
                ul                    
                    li
                        img(src="../imgs/first.png")
                        .a(onclick="selectedBt('/per/settings')") 首页
                    li
                        img(src="../imgs/device.png")
                        .a(onclick="selectedBt('/per/device')") 设备
                    li
                        img(src="../imgs/policy.png")
                        .a(onclick="selectedBt('/per/policy')") 策略
                    li
                        img(src="../imgs/depart.png")
                        .a(onclick="selectedBt('/per/depart')") 部门
                    li
                        img(src="../imgs/apps.png")
                        .a(onclick="selectedBt('/per/apps')") 应用
            .layout-right(id="layout_right")
                .top(id="thetop" name="thetop")
                    .left
                        ul
                            li.title #{ title }
                    .right
                        .search
                            form(onsubmit="searchbyk(this.search.value);return false;")
                                input(type="submit" id="submit" value="  ")
                                input(type="text" name="search" placeholder="输入关键字" style="margin-right:100px;")              
                .center            
                    block right
                .footerpage(style="display:none")
                    .page                                     
            .alert(style="display:none;")
                .background
                .content
                    .top
                        .title 密码修改
                        .alert-off(onclick="alertOff()")
                    .cont
            .warning(style="display:none;") 
        script(src="/scripts/personal.js")